<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres?currentSchema="Homework"</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">postgres</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">none</property>
        <property name="current_session_context_class">thread</property>
        <!--Иначе кастомный валидатор инициализируется дважды и падает на втором вызове т.к. сервис проверки = null-->
        <property name="javax.persistence.validation.mode">none</property>


        <mapping class="gb.spring.homework5.model.Product"/>
        <mapping class="gb.spring.homework5.model.Company"/>
        <mapping class="gb.spring.homework5.model.Order"/>
        <mapping class="gb.spring.homework5.model.OrderDetail"/>
        <mapping class="gb.spring.homework5.model.Customer"/>
    </session-factory>
</hibernate-configuration>
